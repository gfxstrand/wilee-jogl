attribute vec2 va_vertex;

uniform vec2 vu_texture_size;
uniform mat4 vu_projection;
uniform mat4 vu_transformation;

varying mediump vec2 vo_tex_coord;

void main() {
    gl_Position = vu_projection * vu_transformation * vec4(va_vertex, 0, 1);
    vec2 tex_coord = va_vertex / vu_texture_size;
    vo_tex_coord = tex_coord;
}

